<% content_for :body_content_title do %>
  <%= @nome:string.modelo %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Modelo</h1>
    <p>
      <%=raw @nome:string.modelo %>
    </p>
  </section>
  <section>
    <h1>Fabricante</h1>
    <p>
      <%=raw @nome:string.fabricante %>
    </p>
  </section>
  <section>
    <h1>Especificacao</h1>
    <p>
      <%=raw @nome:string.especificacao %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="nome:strings">
      <% @nome:strings.each do |nome:string| %>
        <li>
          <%= link_to nome:string.modelo, refinery.nome:strings_nome:string_path(nome:string) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
