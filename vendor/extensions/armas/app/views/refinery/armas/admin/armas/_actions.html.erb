<ul>
  <% if ::Refinery::Armas::Admin::ArmasController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.armas_admin_armas_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_armas_admin_arma_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Armas::Admin::ArmasController.sortable? && ::Refinery::Armas::Arma.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Armas"),
                 refinery.armas_admin_armas_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Armas"),
                 refinery.armas_admin_armas_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
